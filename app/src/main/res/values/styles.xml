<resources>

    <!-- Base application theme. Theme.AppCompat.Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fui_bgFacebook</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="LoadingScreenTheme" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/fui_bgFacebook</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>
</resources>
